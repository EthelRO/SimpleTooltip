{
	"name": "ItemDescription",
	"version": "1.0.0",
	"author": [
		"EthelRO Team"
	],
	"url": "https://ethelro.com",
	"descriptionmsg": "itemdescription-desc",
	"license-name": "MIT",
	"type": "parserhook",
	"requires": {
		"MediaWiki": ">= 1.39.0"
	},
	"MessagesDirs": {
		"ItemDescription": [
			"i18n"
		]
	},
	"ExtensionMessagesFiles": {
		"ItemDescriptionMagic": "ItemDescription.i18n.magic.php"
	},
	"AutoloadClasses": {
		"ItemDescriptionHooks": "src/ItemDescriptionHooks.php"
	},
	"ResourceModules": {
		"ext.ItemDescription": {
			"targets": [
				"mobile",
				"desktop"
			],
			"scripts": [
				"lib/ItemDescription.js"
			],
			"styles": [
				"lib/ItemDescription.css"
			]
		},
		"ext.ItemDescription.Debug": {
			"targets": [
				"mobile",
				"desktop"
			],
			"scripts": [
				"lib/debug-helper.js"
			],
			"dependencies": [
				"ext.ItemDescription"
			]
		}
	},
	"ResourceFileModulePaths": {
		"localBasePath": "",
		"remoteExtPath": "ItemDescription"
	},
	"config": {
		"ItemDescriptionEnabled": {
			"value": true
		}
	},
	"Hooks": {
		"BeforePageDisplay": "ItemDescriptionHooks::onBeforePageDisplay",
		"ParserFirstCallInit": "ItemDescriptionHooks::onParserFirstCallInit"
	},
	"manifest_version": 2
}