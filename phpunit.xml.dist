<phpunit colors="true">
    <testsuites>
        <testsuite name="tests">
            <directory>tests</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist addUncoveredFilesFromWhitelist="false">
            <directory suffix=".php">src</directory>
            <report>
                <clover outputFile="coverage/php/coverage.xml"/>
            </report>
        </whitelist>
    </filter>
</phpunit>